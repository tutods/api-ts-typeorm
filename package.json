{
	"name": "api-ts-typeorm",
	"keywords": [
		"javascript",
		"typescript",
		"api",
		"api rest",
		"nodejs",
		"typeorm",
		"docker",
		"postgresql"
	],
	"description": "All code in this project as created following the \"API Restful Javascript com Node.js, Typescript, TypeORM etc \" course in Udemy.",
	"version": "1.0.0",
	"main": "src/shared/http/server.ts",
	"repository": "https://github.com/TutoDS/api-ts-typeorm",
	"author": "Daniel Sousa @TutoDS <jdaniel.asousa@gmail.com>",
	"license": "MIT",
	"scripts": {
		"postinstall": "husky install",
		"start": "node dist/shared/http/server.js",
		"prebuild": "rimraf dist",
		"build": "babel ./src --extensions \".js,.ts\" --out-dir dist --copy-files",
		"dev": "tsnd --inspect --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/shared/http/server.ts",
		"prelint": "prettier --write .",
		"lint": "eslint . --ext .ts --ext .js",
		"lint:fix": "eslint . --ext .ts --ext .js --fix",
		"format": "prettier --write .",
		"typeorm": "tsnd ./node_modules/typeorm/cli.js",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.4.0",
		"cors": "^2.8.5",
		"date-fns": "^2.19.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"handlebars": "^4.7.7",
		"ioredis": "^4.24.5",
		"joi": "^17.4.0",
		"jsonwebtoken": "^9.0.0",
		"multer": "^1.4.2",
		"nodemailer": "^6.6.1",
		"pg": "^8.5.1",
		"rate-limiter-flexible": "^2.2.1",
		"redis": "^3.0.2",
		"reflect-metadata": "^0.1.10",
		"rimraf": "^3.0.2",
		"typeorm": "0.2.31",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.13.10",
		"@babel/core": "^7.13.13",
		"@babel/node": "^7.13.13",
		"@babel/plugin-proposal-class-properties": "^7.13.0",
		"@babel/plugin-proposal-decorators": "^7.13.5",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-typescript": "^7.13.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.10",
		"@types/date-fns": "^2.6.0",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.11",
		"@types/handlebars": "^4.1.0",
		"@types/ioredis": "^4.22.1",
		"@types/joi": "^17.2.3",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/multer": "^1.4.5",
		"@types/node": "^14.14.31",
		"@types/nodemailer": "^6.4.0",
		"@types/pg": "^7.14.11",
		"@types/redis": "^2.8.28",
		"@types/reflect-metadata": "^0.1.0",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"babel-plugin-module-resolver": "^4.1.0",
		"babel-plugin-transform-typescript-metadata": "^0.3.2",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.6",
		"tsconfig-paths": "^3.9.0",
		"typescript": "3.3.3333"
	},
	"lint-staged": {
		"*.{js,ts,scss,css,html,tsx,jsx}": [
			"prettier --write .",
			"git add ."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "eslint . --ext .ts --ext .js"
		}
	}
}
